<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotelfrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel_frag">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDivider"
        android:orientation="vertical"
        android:padding="10sp"
        tools:context=".hotel_del_update">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/hotel_list"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Hotel card starts here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100sp"
                android:src="@drawable/profile"

                app:srcCompat="@drawable/earlsregency" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/hotel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/earl_regency_kandy"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/hotel1text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/updatehotelbtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gradient"
                        android:shadowColor="@color/colorText"
                        android:text="@string/update"
                        android:textColor="@color/colorText"
                        android:textFontWeight="100"
                        android:textSize="20dp" />


                    <Button
                        android:id="@+id/deletehotelbtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gradient"
                        android:shadowColor="@color/colorText"
                        android:text="@string/delete"
                        android:textColor="@color/colorText"
                        android:textFontWeight="100"
                        android:textSize="20dp" />

                    />
                </LinearLayout>
            </LinearLayout>


            </LinearLayout>
        <!-- First Hotel card Ends here -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100sp"
                android:src="@drawable/profile"

                app:srcCompat="@drawable/ozo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/hotel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ozo_kandy"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/hotel2text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/update2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gradient"
                        android:shadowColor="@color/colorText"
                        android:text="@string/update"
                        android:textColor="@color/colorText"
                        android:textFontWeight="100"
                        android:textSize="20dp" />


                    <Button
                        android:id="@+id/delete2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gradient"
                        android:shadowColor="@color/colorText"
                        android:text="@string/delete"
                        android:textColor="@color/colorText"
                        android:textFontWeight="100"
                        android:textSize="20dp" />

                    />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100sp"
                android:src="@drawable/profile"

                app:srcCompat="@drawable/queens" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/hotel_nametxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/queens_kandy"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/hotel_descTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/update3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gradient"
                        android:shadowColor="@color/colorText"
                        android:text="@string/update"
                        android:textColor="@color/colorText"
                        android:textFontWeight="100"
                        android:textSize="20dp" />


                    <Button
                        android:id="@+id/delete3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gradient"
                        android:shadowColor="@color/colorText"
                        android:text="@string/delete"
                        android:textColor="@color/colorText"
                        android:textFontWeight="100"
                        android:textSize="20dp" />

                    />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>